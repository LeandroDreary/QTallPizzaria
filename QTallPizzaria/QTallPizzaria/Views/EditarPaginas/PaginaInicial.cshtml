
@{
    ViewBag.Title = "Editar - Página Inicial";
    Layout = "~/Views/Administrador/Layout.cshtml";
}

<div class="container">
    <h2 class="text-center my-4">Editar Página Inicial</h2>

    <h3 class="text-center my-4">Banner</h3>
    <hr />
    <div class="row banner">
        <div class="col-6">
            <img width="100%" id="blah" src="~/img/Home/banners/index.jpg" />
        </div>
        <div class="col-6">
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
            <form id="form1" runat="server">
                <input type='file' id="imgInp" />
            </form>
        </div>
    </div>

</div>

<script>
    function readURL(input) {

  if (input.files && input.files[0]) {
    var reader = new FileReader();

    reader.onload = function(e) {
      $('#blah').attr('src', e.target.result);
    }

    reader.readAsDataURL(input.files[0]);
  }
}

$("#imgInp").change(function() {
  readURL(this);
});
</script>
